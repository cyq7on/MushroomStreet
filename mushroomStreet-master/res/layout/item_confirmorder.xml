<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_store"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="张小姐的店"
            android:textColor="#B5B5B5"
            android:textSize="14sp" />
        <Button
            android:id="@+id/btn_chat"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/connect_icon"
            android:text="私聊"
            android:textColor="#B5B5B5"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#EBEBEB" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical" >


        <ImageView
            android:id="@+id/iv"
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/show" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv"
            android:ellipsize="end"
            android:maxEms="8"
            android:singleLine="true"
            android:text="韩版T恤韩版T恤韩版T恤韩版T恤"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv"
            android:text="颜色：黑色"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/tv_color"
            android:text="尺码：L"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_size"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv"
            android:gravity="center_vertical" >

            <Button
                android:id="@+id/btn_sub"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/sub" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="1"
                android:textColor="#000" />

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/plus" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/tv_price_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="¥319.00" />

            <View
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:background="@color/gray_text_dark"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_price_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_price_old"
                android:layout_centerHorizontal="true"
                android:text="¥119.00"
                android:textColor="#000" />
        </RelativeLayout>
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#EBEBEB" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="快递运费："
            android:textColor="#B5B5B5"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_freight"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:text="全国包邮"
            android:textColor="#000"
            android:textSize="14sp" />
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#EBEBEB" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="价格合计："
            android:textColor="#B5B5B5"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_priceall"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:text="￥00.00"
            android:textColor="#000"
            android:textSize="14sp" />
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#EBEBEB" />
    
    <EditText 
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/im_evaluation_item_bk"
        android:layout_marginBottom="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:textSize="12sp"
        android:textColor="#000"
        android:hint="订单补充说明..."/>

</LinearLayout>
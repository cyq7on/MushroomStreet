<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <com.cyq7on.mushrommstreet.utils.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:orientation="vertical">
        
        <LinearLayout
            android:id="@+id/sc_grid_ll"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="国家和地区" 
                android:textSize="16sp"
                android:textColor="#ABABAB"
                />

            <TextView
	            android:id="@+id/sc_grid"
	            android:layout_width="match_parent"
	            android:layout_height="40dp"
	            android:drawableRight="@drawable/goto_icon"
	            android:drawablePadding="5dp"
	            android:text="中国"
	            android:textColor="#000"
	            android:gravity="right|center_vertical"
	            android:layout_marginRight="5dp"
	            android:textSize="16sp" />
        </LinearLayout>
    
    	<View
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:background="#B8B8B8" />
    	
    	<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86" 
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:textColor="#ABABAB"
                />

            <View
		        android:layout_width="0.5dp"
		        android:layout_height="20dp"
		        android:background="#B8B8B8"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp" />
            
            <EditText 
		        android:id="@+id/et_tele"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:inputType="phone"
		        android:hint="手机号"
		        android:gravity="center_vertical"
		        android:layout_gravity="center_vertical"
		        android:textSize="16sp"
		        android:textCursorDrawable="@null"
		        android:background="@null"
		        android:textColor="#000"/>
        </LinearLayout>
        <View
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:background="#B8B8B8" />
    	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

             <EditText 
		        android:id="@+id/et_authcode"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:hint="请输入短信验证码"
		        android:inputType="number"
		        android:gravity="center_vertical"
		        android:layout_gravity="center_vertical"
		        android:textSize="16sp"
		        android:textCursorDrawable="@null"
		        android:background="@null"
		        android:textColor="#000"/>

            <View
		        android:layout_width="0.5dp"
		        android:layout_height="20dp"
		        android:background="#B8B8B8"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp" />
            
            <Button
		        android:id="@+id/btn_getcode"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center|right"
		        android:text="获取验证码"
		        android:onClick="onClick"
		        android:layout_gravity="center_vertical"
		        android:textSize="16sp"
		        android:background="@null"
		        android:textColor="#000"/>
        </LinearLayout>
    	
    
    	<View
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:background="#B8B8B8" />
    	<EditText 
    	    android:paddingTop="12dp"
    	    android:paddingBottom="12dp"
	        android:id="@+id/et_password"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:inputType="textPassword"
	        android:hint="密码"
	        android:textSize="16sp"
	        android:textCursorDrawable="@null"
	        android:background="@null"
	        android:textColor="#000"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"/>
    	<View
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#B8B8B8" />
    	<Button
	        android:id="@+id/btn_register"
	        android:layout_width="match_parent"
	        android:layout_height="45dp"
	        android:layout_marginTop="10dp"
	        android:background="@drawable/login_white_button_disable"
	        android:text="立即注册"
	        android:clickable="false"
	        android:onClick="onClick"
	        android:textColor="@color/white" />
    	<TextView 
    	    android:layout_marginTop="10dp"
    	    android:textColor="#666666"
    	    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="*注册代表同意《蘑菇街网络服务使用协议》"
    	    />
    </LinearLayout>

</LinearLayout>
   <RelativeLayout         
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dip"
       android:layout_marginTop="5dip"
        >
        
       <ImageView
            android:id="@+id/iv_user"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:background="@drawable/tou"
            android:scaleType="fitXY" />
    
       <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_user"   
            android:layout_marginLeft="10dp"                
            android:text="白子画"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18.0sp" /> 
            
       <TextView
	         android:id="@+id/contenttime"
	         android:layout_marginTop="5dp"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_toRightOf="@id/iv_user" 
	         android:layout_below="@id/username"
	         android:layout_alignLeft="@id/username"
	         android:text="am 11:30"
	         android:textColor="@android:color/darker_gray"
	         android:textSize="16.0sp" />
       
        <TextView
	         android:id="@+id/place"
	         android:layout_marginTop="5dp"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_toRightOf="@id/contenttime" 
	         android:layout_below="@id/username"
	         android:layout_marginLeft="5dp"
	         android:text="四川成都"
	         android:textColor="@android:color/darker_gray"
	         android:textSize="16.0sp" />
        
        <Button 
			 android:id="@+id/btn_attention"
	         android:layout_marginTop="5dp"
	         android:layout_width="60dp"
	         android:layout_height="25dp"
	         android:layout_alignParentRight="true"
	         android:layout_alignTop="@id/username"
	         android:layout_marginRight="10dp"
	         android:background="@drawable/shape_btn_attention"
	         android:text="+ 关注"
	         android:textColor="#666666"
	         android:gravity="center"
	         android:textSize="18sp" />
  </RelativeLayout>
  
   
   <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="10dip"
        android:orientation="vertical"   
       >


         <RelativeLayout 
            android:layout_width="fill_parent"
           android:layout_height="wrap_content" 
           android:layout_marginTop="20dip"
                      
            >   
           <TextView
                  android:id="@+id/content"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"                   
                  android:text="我被爱放纵终生孤寂，不还手，不放手，笔下画不完的园，心间填不完的缘，是你"
                  android:textColor="#404040"
                  android:textSize="16.0sp" /> 
           
        </RelativeLayout>
     
     
      <LinearLayout
         android:layout_marginTop="15dp"
	     android:id="@+id/image_container" 
	     android:layout_width="match_parent"
	     android:layout_height="match_parent"
	     android:layout_marginBottom="10dip"
	     android:orientation="vertical"
    >
    </LinearLayout>
    
      <LinearLayout 
          android:id="@+id/ll_goods"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" 
          android:layout_marginTop="3dip"
          android:gravity="center_vertical" >
          
          <Button 
			 android:id="@+id/btn_goods"
	         android:layout_width="0dp"
	         android:layout_weight="2"
	         android:layout_height="26dp"
	         android:padding="3dp"
	         android:drawableLeft="@drawable/link_icon"
	         android:drawablePadding="3dp"
	         android:layout_marginRight="10dp"
	         android:background="@drawable/shape_btn_attention"
	         android:text="2件相关商品"
	         android:textColor="#666666"
	         android:gravity="center"
	         android:textSize="14sp" />
          <ImageView 
              android:id="@+id/iv_dianzan"
              android:layout_width="0dp"
              android:layout_weight="0.5"
              android:layout_height="20dp"
              android:layout_marginLeft="60dp" />
          
          <TextView
              android:id="@+id/tv_dianzan"
              android:layout_weight="0.5"
              android:layout_width="0dp"
              android:layout_height="wrap_content"                    
              android:text="666"
              android:background="@null"
              android:textColor="#666666"
	          android:gravity="center"
	          android:layout_marginLeft="5dp"
              android:textSize="18sp" />
          
          <Button
              android:id="@+id/btn_comment"
              android:layout_weight="1"
              android:layout_width="0dp"
              android:layout_height="wrap_content" 
              android:layout_marginLeft="10dp"                   
              android:text="评论"
              android:background="@null"
              android:textColor="#666666"
	          android:gravity="center"
	          android:drawableLeft="@drawable/beauty_detail_comment_total_icon"
	          android:drawablePadding="5dp"
              android:textSize="18sp" />
      </LinearLayout>
          
        
            
          <ImageView
            android:id="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="1.5dip"
            android:background="@drawable/line"
            />
          
          
   </LinearLayout>
   
   <TextView 
       android:layout_marginLeft="10dp"
       android:id="@+id/tv_comment_num"  
       android:layout_width="wrap_content"  
       android:layout_height="wrap_content"
       android:text="查看所有38条评论"
       android:textColor="#666666" />
   
   <LinearLayout 
       android:layout_marginLeft="10dp"
       android:layout_marginBottom="10dp"
       android:layout_width="wrap_content"  
       android:layout_height="wrap_content">
          
        <TextView 
		       android:id="@+id/tv_comment_people"  
		       android:layout_width="wrap_content"  
		       android:layout_height="wrap_content"
		       android:text="花千骨"
		       android:textColor="#000" />
        
        <TextView 
		       android:layout_marginLeft="5dp"
		       android:id="@+id/tv_comment"  
		       android:layout_width="wrap_content"  
		       android:layout_height="wrap_content"
		       android:text="好喜欢白子画师傅"
		       android:textColor="#666666" />
       
   </LinearLayout>

</LinearLayout>
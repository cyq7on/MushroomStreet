<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#fff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#fff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/show" />

            <TextView
                android:id="@+id/tv_storename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/iv_head"
                android:text="韩版男女麻花围巾"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_storename"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_head"
                android:text="￥35"
                android:textColor="#f00"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_exit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@id/tv_collectcount"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/publish_delete_icon"
                android:textColor="#000"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:background="#EBEBEB" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="颜色："
            android:textColor="#000"
            android:textSize="14sp" />

        <GridView
            android:id="@+id/gv_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:horizontalSpacing="5dp"
            android:verticalSpacing="5dp" 
            android:listSelector="@android:color/transparent"
            android:numColumns="5"
            android:gravity="center_vertical"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:background="#EBEBEB" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="尺码："
            android:textColor="#000"
            android:textSize="14sp" />

        <GridView
            android:id="@+id/gv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:horizontalSpacing="5dp"
            android:verticalSpacing="5dp" 
            android:listSelector="@android:color/transparent"
            android:gravity="center_vertical"
            android:numColumns="5"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
		/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:background="#EBEBEB" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="数量："
            android:textColor="#000"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical" >

            <Button
                android:id="@+id/btn_sub"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/sub" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="1"
                android:textColor="#000" />

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/plus" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#EBEBEB" />

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="66dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#f00"
            android:gravity="center"
            android:text="确定"
            android:textColor="#fff"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>